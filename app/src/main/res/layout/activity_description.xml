<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:layout_margin="10dp"

    >

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:background="@drawable/border_item"
        android:scaleType="centerCrop"
        android:padding="25dp"
        />


    <TextView
        android:id="@+id/id_tv_item_comment_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                        Nombre"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/white"

        />

    <TextView
        android:id="@+id/id_tv_item_comment_ubication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ubicacion"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/id_tv_item_comment_horary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="horario"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/id_tv_item_comment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descripciÃ³n"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickNewcommentactivity"
            android:text="comentario" />

        <Button
            android:id="@+id/id_btn_item_allcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="ver comentarios" />
    </LinearLayout>


</LinearLayout>

